{% extends app.request.xmlHttpRequest()
     ? 'AppBundle::ajax.html.twig'
     : 'AppBundle:UserProfile:profile-layout.html.twig' %}
          


{% block sub_body %}
    <div class="heading-inner first-heading">
                                <p class="title">Edit Profile</p>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12 nopadding">
                                <div class="profile-edit row">
                                    {{ form_start(form) }}

                                        {% for message in app.flashes('notice') %}
                                            <div class="alert alert-success" role="alert">
                                                {{ message }}
                                            </div>
                                        {% endfor %}

                                        <div class="col-md-6 col-sm-12">
                                            {{ form_row(form.first_name) }}
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            {{ form_row(form.last_name) }}
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            {{ form_row(form.birth_date) }}
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            {{ form_row(form.email) }}
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            {{ form_row(form.phone) }}
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            {{ form_row(form.education_info) }}
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            {{ form_row(form.address) }}
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            {{ form_row(form.about) }}
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <button type="submit" class="btn btn-default pull-right"> Save Profile <i class="fa fa-angle-right"></i></button>
                                        </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>

{% endblock %}
